  <script>
    type UserRole = 'cliente' | 'administrador' | 'supervisor' | 'entregador';

    interface User {
      id: string;
      name: string;
      email: string;
      role: UserRole;
    }

    let isAvailable = true;

    async function checkAuthStatus(): Promise<User | null> {
      const sessionToken = localStorage.getItem('sessionToken');
      const storedUser = localStorage.getItem('user');

      if (!sessionToken || !storedUser) {
        return null;
      }

      try {
        const response = await fetch('/api/auth/status', {
          headers: { Authorization: `Bearer ${sessionToken}` },
        });

        if (!response.ok && response.status !== 200) {
          console.error('Auth check failed with status:', response.status);
          try {
            return JSON.parse(storedUser);
          } catch {
            return null;
          }
        }

        const result = await response.json();
        if (result.authenticated) {
          const updatedUser = { ...JSON.parse(storedUser), ...result.user };
          localStorage.setItem('user', JSON.stringify(updatedUser));
          return result.user;
        }
        localStorage.removeItem('sessionToken');
        localStorage.removeItem('user');
        return null;
      } catch (error) {
        console.error('Auth check error:', error);
        try {
          return JSON.parse(storedUser);
        } catch {
          return null;
        }
      }
    }

    function toggleStatus() {
      isAvailable = !isAvailable;
      const button = document.getElementById('toggle-status')!;
      const statusText = document.getElementById('status-text')!;

      if (isAvailable) {
        button.classList.remove('btn-warning');
        button.classList.add('btn-success');
        statusText.textContent = 'Dispon√≠vel';
      } else {
        button.classList.remove('btn-success');
        button.classList.add('btn-warning');
        statusText.textContent = 'Ocupado';
      }
    }

    function loadDeliveries() {
      // Placeholder - will be connected to real orders API
      document.getElementById('deliveries-today')!.textContent = '0';
      document.getElementById('pending-deliveries')!.textContent = '0';
      document.getElementById('weekly-deliveries')!.textContent = '0';
    }

    document.addEventListener('DOMContentLoaded', async () => {
      const loadingState = document.getElementById('loading-state');
      const accessDenied = document.getElementById('access-denied');
      const entregadorDashboard = document.getElementById('entregador-dashboard');

      const user = await checkAuthStatus();

      loadingState?.classList.add('hidden');

      // Allow entregadores and administrators
      if (!user || (user.role !== 'entregador' && user.role !== 'administrador')) {
        accessDenied?.classList.remove('hidden');
        return;
      }

      entregadorDashboard?.classList.remove('hidden');
      document.getElementById('user-name')!.textContent = user.name.split(' ')[0];
      loadDeliveries();

      // Toggle status button
      document.getElementById('toggle-status')?.addEventListener('click', toggleStatus);

      // Refresh button
      document.getElementById('refresh-deliveries')?.addEventListener('click', loadDeliveries);
    });
  </script>
</Layout>

---
import { marked } from 'marked';
import { type Footer } from 'types';

interface Props extends Footer {
    'data-sb-field-path'?: string;
}

const { text, 'data-sb-field-path': fieldPath } = Astro.props;
---

{
    text && (
        <footer class="px-4 py-4 sm:px-5 sm:py-6" data-sb-field-path={fieldPath}>
            <div class="mx-auto text-center max-w-7xl">
                <div data-sb-field-path=".text" set:html={marked.parse(text)} />
            </div>
        </footer>
    )
}

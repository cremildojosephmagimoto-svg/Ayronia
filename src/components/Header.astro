---
import { type Header } from 'types';
import Action from '@components/Action.astro';
import ResponsiveImage from '@components/ResponsiveImage.astro';

interface Props extends Header {
    'data-sb-field-path'?: string;
}

const { title, logo, navLinks, 'data-sb-field-path': fieldPath } = Astro.props;

const customLinks = [
    { label: 'üè† In√≠cio', href: '/' },
    { label: 'üçΩÔ∏è Catering', href: '/catering' },
    { label: 'üõí Mini Mercado', href: '/mercado' },
    { label: 'üß∞ Servi√ßos', href: '/servicos' },
    { label: 'üè¢ Sobre N√≥s', href: '/sobre' },
    { label: 'üìû Contacto', href: '/contactos' },
    { label: 'Carrinho', href: '/carrinho', badge: true }
];
---

<nav class="p-4 sm:p-5" data-sb-field-path={fieldPath}>
    <div class="flex items-center justify-between w-full gap-6 mx-auto max-w-7xl">
        <a class="flex items-center gap-3" href="/">
            <img src="/images/logo.png" alt="Ayronia Logo" class="h-12 w-auto sm:h-14" />
            <span class="text-xl font-bold sm:text-2xl font-heading" data-sb-field-path=".title">
                {title || 'Ayronia'}
            </span>
        </a>
        <div class="flex items-center gap-6">
            <ul class="hidden lg:flex lg:flex-wrap lg:items-center lg:gap-6">
                {customLinks.map(link => (
                    <li>
                        <a href={link.href} class="no-underline hover:underline flex items-center gap-2">
                            {link.label}
                            {link.badge && (
                                <span class="badge badge-primary badge-sm cart-badge">0</span>
                            )}
                        </a>
                    </li>
                ))}
            </ul>
            {
                navLinks && navLinks.length > 0 && (
                    <ul class="hidden lg:flex lg:flex-wrap lg:items-center lg:gap-6" data-sb-field-path=".navLinks">
                        {navLinks.map((item, index) => (
                            <li>
                                <Action
                                    action={item}
                                    class:list={[item._type === 'actionLink' ? 'no-underline hover:underline' : 'px-4 py-3 h-auto min-h-0']}
                                    data-sb-field-path={`.${index}`}
                                />
                            </li>
                        ))}
                    </ul>
                )
            }
            <div class="relative lg:hidden">
                <button
                    class="inline-flex justify-center items-center w-10 h-10 relative z-2 nav-toggle"
                    aria-label="Open Menu"
                    aria-expanded="false"
                    aria-controls="nav-panel"
                >
                    <span class="nav-toggle-icon" />
                </button>
                <div id="nav-panel" class="nav-panel absolute rounded-box -top-2 -right-2 z-1 shadow-xl bg-base-100 border border-base-200/70">
                    <ul class="flex flex-col px-4 pb-6 pt-14">
                        {customLinks.map(link => (
                            <li>
                                <a href={link.href} class="block py-2 no-underline hover:underline flex items-center gap-2">
                                    {link.label}
                                    {link.badge && (
                                        <span class="badge badge-primary badge-sm cart-badge-mobile">0</span>
                                    )}
                                </a>
                            </li>
                        ))}
                        {navLinks && navLinks.length > 0 && navLinks.map((item, index) => (
                            <li>
                                <Action
                                    action={item}
                                    class:list={[
                                        item._type === 'actionLink' ? 'block py-2 no-underline hover:underline' : 'w-full px-4 py-3.5 h-auto min-h-0'
                                    ]}
                                    data-sb-field-path={`.${index}`}
                                />
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>

<style>
    @reference "../styles/globals.css";
    .nav-panel {
        @apply max-w-72 opacity-0 scale-90 origin-top-right invisible;
        width: calc(100vw - 1rem);
        transition:
            transform 0.25s cubic-bezier(0.4, 0, 0.2, 1),
            opacity 0.15s cubic-bezier(0.4, 0, 0.2, 1),
            visibility 0s 0.25s;
    }
    .nav-panel.is-visible {
        @apply scale-100 opacity-100 visible;
        transition: 0.25s;
    }
    .nav-panel li + li:has(.btn),
    .nav-panel li:has(.btn) + li {
        @apply mt-4;
    }
    .nav-toggle-icon {
        @apply block relative bg-current rounded transition;
        width: 1.5rem;
        height: 0.125rem;
    }
    .nav-toggle-icon:before,
    .nav-toggle-icon:after {
        @apply block absolute bg-current rounded transition-all;
        content: '';
        width: 1.5rem;
        height: 0.125rem;
    }
    .nav-toggle-icon:before {
        top: -0.5rem;
    }
    .nav-toggle-icon:after {
        top: 0.5rem;
    }
    .nav-toggle-icon.is-active {
        @apply bg-transparent;
    }
    .nav-toggle-icon.is-active:before {
        top: 0;
        margin-top: -0.5625rem;
        transform: translateY(0.5rem) rotate(-45deg);
    }
    .nav-toggle-icon.is-active:after {
        top: 0;
        margin-top: -0.5625rem;
        transform: translateY(0.5rem) rotate(45deg);
    }
</style>

<script>
    function navToggle() {
        const nav = document.querySelector('.nav-panel');
        const navToggleBtn = document.querySelector('.nav-toggle');
        const navToggleIcon = document.querySelector('.nav-toggle-icon');
        navToggleBtn?.addEventListener('click', () => {
            const isMenuExpanded = navToggleBtn.getAttribute('aria-expanded') === 'true';
            navToggleBtn.setAttribute('aria-expanded', isMenuExpanded ? 'false' : 'true');
            navToggleBtn.setAttribute('aria-label', isMenuExpanded ? 'Open Menu' : 'Close Menu');
            navToggleIcon?.classList.toggle('is-active');
            nav?.classList.toggle('is-visible');
        });
    }

    function updateCartBadge() {
        const cart = JSON.parse(localStorage.getItem('cart') || '[]');
        const itemCount = cart.reduce((sum: number, item: any) => sum + item.quantity, 0);
        const badges = document.querySelectorAll('.cart-badge, .cart-badge-mobile');
        badges.forEach(badge => {
            badge.textContent = itemCount.toString();
            if (itemCount > 0) {
                badge.classList.remove('badge-ghost');
                badge.classList.add('badge-primary');
            } else {
                badge.classList.remove('badge-primary');
                badge.classList.add('badge-ghost');
            }
        });
    }

    navToggle();
    updateCartBadge();
    
    window.addEventListener('storage', updateCartBadge);
    setInterval(updateCartBadge, 1000);
    
    document.addEventListener('astro:after-swap', () => {
        navToggle();
        updateCartBadge();
    });
</script>
